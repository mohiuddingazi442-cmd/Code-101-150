#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    struct tm *tm_info;

    // Get current system time
    time(&t);
    tm_info = localtime(&t);

    // Display current date and time
    printf("Current Date and Time: %02d/%02d/%d %02d:%02d:%02d\n",
           tm_info->tm_mday,           // Day
           tm_info->tm_mon + 1,        // Month (0-11, so +1)
           tm_info->tm_year + 1900,    // Year (since 1900)
           tm_info->tm_hour,           // Hour
           tm_info->tm_min,            // Minute
           tm_info->tm_sec);           // Second

    return 0;
}
