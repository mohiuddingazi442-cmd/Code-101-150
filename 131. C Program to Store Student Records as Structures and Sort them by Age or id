#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    int age;
    char name[50];
};

int main() {
    struct Student s[100], temp;
    int n, i, j, choice;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);

        printf("ID: ");
        scanf("%d", &s[i].id);

        printf("Name: ");
        scanf(" %[^\n]", s[i].name);

        printf("Age: ");
        scanf("%d", &s[i].age);
    }

    printf("\nSort Students By:\n");
    printf("1. Age\n");
    printf("2. ID\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    /* Sorting */
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {

            if (choice == 1 && s[i].age > s[j].age) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
            else if (choice == 2 && s[i].id > s[j].id) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }

        }
    }

    printf("\nSorted Student Records:\n");
    printf("ID\tAge\tName\n");

    for (i = 0; i < n; i++) {
        printf("%d\t%d\t%s\n",
                s[i].id, s[i].age, s[i].name);
    }

    return 0;
}
