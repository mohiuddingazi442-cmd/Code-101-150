#include <stdio.h>
#include <stdlib.h>

int* createArray(int size) {
    int *arr = (int*)malloc(size * sizeof(int)); // allocate memory
    if (arr == NULL) {
        return NULL; // allocation failed
    }

    for (int i = 0; i < size; i++) {
        arr[i] = i + 1; // initialize array
    }

    return arr; // return pointer to array
}

int main() {
    int n = 5;
    int *myArray = createArray(n);

    if (myArray != NULL) {
        for (int i = 0; i < n; i++) {
            printf("%d ", myArray[i]);
        }
        free(myArray); // free allocated memory
    }

    return 0;
}
