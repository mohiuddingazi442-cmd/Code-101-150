#include <stdio.h>
#include <time.h>
#include <unistd.h>   // for sleep()
#include <string.h>

int main() {
    while (1) {
        time_t t;
        struct tm *tm_info;
        char meridian[3];
        int hour, minute, second;

        // Get current time
        time(&t);
        tm_info = localtime(&t);

        hour = tm_info->tm_hour;
        minute = tm_info->tm_min;
        second = tm_info->tm_sec;

        // Determine AM/PM and convert to 12-hour format
        if (hour >= 12) {
            strcpy(meridian, "PM");
            if (hour > 12)
                hour -= 12;
        } else {
            strcpy(meridian, "AM");
            if (hour == 0)
                hour = 12;
        }

        // Clear screen
        printf("\033[2J\033[H");  // ANSI escape codes for clearing terminal

        // Print digital clock
        printf("Digital Clock: %02d:%02d:%02d %s\n", hour, minute, second, meridian);

        sleep(1);  // wait for 1 second
    }

    return 0;
}
