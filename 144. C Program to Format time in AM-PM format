#include <stdio.h>

int main() {
    int hours, minutes, seconds;
    char meridian[3];  // AM or PM

    // Input time in 24-hour format
    printf("Enter time in 24-hour format (HH MM SS): ");
    scanf("%d %d %d", &hours, &minutes, &seconds);

    // Validate input
    if (hours < 0 || hours > 23 || minutes < 0 || minutes > 59 || seconds < 0 || seconds > 59) {
        printf("Invalid time entered.\n");
        return 1;
    }

    // Determine AM or PM
    if (hours >= 12) {
        strcpy(meridian, "PM");
        if (hours > 12) {
            hours -= 12;
        }
    } else {
        strcpy(meridian, "AM");
        if (hours == 0) {
            hours = 12;
        }
    }

    // Display time in 12-hour format
    printf("Time in 12-hour format: %02d:%02d:%02d %s\n", hours, minutes, seconds, meridian);

    return 0;
}
