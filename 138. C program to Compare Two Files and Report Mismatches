#include <stdio.h>
#include <stdlib.h>

int main() {
    char file1[100], file2[100];
    FILE *fp1, *fp2;
    char ch1, ch2;
    int pos = 0, mismatch = 0;

    // Input file names
    printf("Enter first file name: ");
    scanf("%s", file1);

    printf("Enter second file name: ");
    scanf("%s", file2);

    // Open files in read mode
    fp1 = fopen(file1, "r");
    fp2 = fopen(file2, "r");

    if (fp1 == NULL || fp2 == NULL) {
        printf("Error: Unable to open file(s).\n");
        return 1;
    }

    // Compare files character by character
    while (1) {
        ch1 = fgetc(fp1);
        ch2 = fgetc(fp2);
        pos++;

        if (ch1 != ch2) {
            if (ch1 == EOF || ch2 == EOF) break;
            printf("Mismatch at position %d: '%c' vs '%c'\n", pos, ch1, ch2);
            mismatch++;
        }

        if (ch1 == EOF || ch2 == EOF) break;
    }

    if (mismatch == 0 && ch1 == ch2) {
        printf("Files are identical.\n");
    } else {
        printf("Files have %d mismatch(es).\n", mismatch);
    }

    fclose(fp1);
    fclose(fp2);

    return 0;
}
