#include <stdio.h>
#include <stdbool.h>

int main() {
    bool value;
    char result[6];

    printf("Enter boolean value (0 or 1): ");
    scanf("%d", &value);

    if (value)
        strcpy(result, "true");
    else
        strcpy(result, "false");

    printf("Boolean to String: %s\n", result);

    return 0;
}
