#include <stdio.h>

int main() {
    int arr[] = {45, 12, 78, 34, 23};
    int n = sizeof(arr) / sizeof(arr[0]);
    int *ptr = arr; // pointer to the first element
    int i, j, temp;

    // Bubble Sort using pointers
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (*(ptr + j) > *(ptr + j + 1)) {
                // Swap elements
                temp = *(ptr + j);
                *(ptr + j) = *(ptr + j + 1);
                *(ptr + j + 1) = temp;
            }
        }
    }

    // Print sorted array
    printf("Sorted array: ");
    for (i = 0; i < n; i++) {
        printf("%d ", *(ptr + i));
    }
    printf("\n");

    return 0;
}
