#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[100];
    char *start, *end;
    int isPalindrome = 1;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline if present
    str[strcspn(str, "\n")] = '\0';

    start = str;                 // pointer to first character
    end = str + strlen(str) - 1; // pointer to last character

    while (start < end) {
        if (tolower(*start) != tolower(*end)) { // case-insensitive
            isPalindrome = 0;
            break;
        }
        start++;
        end--;
    }

    if (isPalindrome)
        printf("The string is a palindrome.\n");
    else
        printf("The string is not a palindrome.\n");

    return 0;
}
