#include <stdio.h>

struct Student {
    int id;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp;

    /* Writing structure to file */
    fp = fopen("student.dat", "wb");
    if (fp == NULL) {
        printf("File cannot be opened\n");
        return 1;
    }

    printf("Enter Student Details\n");
    printf("ID: ");
    scanf("%d", &s.id);

    printf("Name: ");
    scanf(" %[^\n]", s.name);

    printf("Marks: ");
    scanf("%f", &s.marks);

    fwrite(&s, sizeof(s), 1, fp);
    fclose(fp);

    /* Reading structure from file */
    fp = fopen("student.dat", "rb");
    if (fp == NULL) {
        printf("File cannot be opened\n");
        return 1;
    }

    fread(&s, sizeof(s), 1, fp);

    printf("\nStudent Details from File\n");
    printf("ID: %d\n", s.id);
    printf("Name: %s\n", s.name);
    printf("Marks: %.2f\n", s.marks);

    fclose(fp);

    return 0;
}
