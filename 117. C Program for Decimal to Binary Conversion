#include <stdio.h>

int main() {
    int decimal, binary[32], i = 0;

    printf("Enter a decimal number: ");
    scanf("%d", &decimal);

    int temp = decimal;

    // Convert decimal to binary
    while(temp > 0) {
        binary[i] = temp % 2;
        temp /= 2;
        i++;
    }

    printf("Binary equivalent: ");
    for(int j = i - 1; j >= 0; j--) {
        printf("%d", binary[j]);
    }
    printf("\n");

    return 0;
}
