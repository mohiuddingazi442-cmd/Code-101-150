#include <stdio.h>

struct Student {
    int id;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp;
    int n, i;

    /* Write structure data to file */
    fp = fopen("student.dat", "wb");
    if (fp == NULL) {
        printf("File cannot be opened\n");
        return 1;
    }

    printf("Enter number of students: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);

        printf("ID: ");
        scanf("%d", &s.id);

        printf("Name: ");
        scanf(" %[^\n]", s.name);

        printf("Marks: ");
        scanf("%f", &s.marks);

        fwrite(&s, sizeof(s), 1, fp);
    }

    fclose(fp);

    /* Read structure data from file */
    fp = fopen("student.dat", "rb");
    if (fp == NULL) {
        printf("File cannot be opened\n");
        return 1;
    }

    printf("\nStudent Records from File\n");
    printf("ID\tName\t\tMarks\n");

    while (fread(&s, sizeof(s), 1, fp)) {
        printf("%d\t%s\t\t%.2f\n",
               s.id, s.name, s.marks);
    }

    fclose(fp);

    return 0;
}
