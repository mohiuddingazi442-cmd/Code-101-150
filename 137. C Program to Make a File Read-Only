#include <stdio.h>
#include <sys/stat.h>

int main() {
    char filename[100];

    printf("Enter file name: ");
    scanf("%s", filename);

    // Set file permission to read-only
    if (chmod(filename, S_IREAD) == 0) {
        printf("File is now read-only.\n");
    } else {
        printf("Error: Unable to change file permission.\n");
    }

    return 0;
}
