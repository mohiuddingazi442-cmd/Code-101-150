#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    struct tm *local_time, *gmt_time;

    // Get current time
    time(&t);

    // Get local time
    local_time = localtime(&t);

    // Get GMT/UTC time
    gmt_time = gmtime(&t);

    // Display local time
    printf("Local Time: %02d/%02d/%d %02d:%02d:%02d\n",
           local_time->tm_mday,
           local_time->tm_mon + 1,
           local_time->tm_year + 1900,
           local_time->tm_hour,
           local_time->tm_min,
           local_time->tm_sec);

    // Display GMT/UTC time
    printf("GMT/UTC Time: %02d/%02d/%d %02d:%02d:%02d\n",
           gmt_time->tm_mday,
           gmt_time->tm_mon + 1,
           gmt_time->tm_year + 1900,
           gmt_time->tm_hour,
           gmt_time->tm_min,
           gmt_time->tm_sec);

    return 0;
}
